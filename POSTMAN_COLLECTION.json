{
  "info": {
    "name": "MedLab API Tests",
    "description": "Postman collection for testing MedLab backend APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Registration",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"number\": \"1234567890\",\n  \"password\": \"Test@1234\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["signup"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has userId\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('userId');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "User Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Test@1234\"\n}"
        },
        "url": {
          "raw": "http://localhost:8081/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has user data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('user');",
              "    pm.expect(jsonData.user).to.have.property('id');",
              "    pm.expect(jsonData.user).to.have.property('name');",
              "    pm.expect(jsonData.user).to.have.property('email');",
              "});",
              "",
              "// Save user ID for later use",
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set(\"user_id\", jsonData.user.id);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8081/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["users"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has users array\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('users');",
              "    pm.expect(jsonData.users).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Single User",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8081/users/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["users", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "1"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has user object\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('user');",
              "    pm.expect(jsonData.user).to.have.property('id');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get Stage Definitions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8081/stages",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["stages"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has stages object\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('stages');",
              "    pm.expect(jsonData.stages).to.have.property('LOGIN');",
              "    pm.expect(jsonData.stages).to.have.property('REGISTER');",
              "    pm.expect(jsonData.stages).to.have.property('HOME');",
              "});",
              "",
              "pm.test(\"Each stage has id and name\", function () {",
              "    var jsonData = pm.response.json();",
              "    var stages = jsonData.stages;",
              "    pm.expect(stages.LOGIN).to.have.property('id');",
              "    pm.expect(stages.LOGIN).to.have.property('name');",
              "    pm.expect(stages.REGISTER).to.have.property('id');",
              "    pm.expect(stages.REGISTER).to.have.property('name');",
              "    pm.expect(stages.HOME).to.have.property('id');",
              "    pm.expect(stages.HOME).to.have.property('name');",
              "});"
            ]
          }
        }
      ]
    },
